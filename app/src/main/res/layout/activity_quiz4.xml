<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Quiz4Activity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_q7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:text="@string/q7"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/q7_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_questions"
        android:gravity="center"
        android:text="A - Activity"
        android:textSize="16dp" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/q7_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_questions"
        android:gravity="center"
        android:text="D - Content Provider"
        android:textSize="16dp" />



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/q7_3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_questions"
        android:gravity="center"
        android:text="B - Services"
        android:textSize="16dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/q7_4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_questions"
        android:gravity="center"
        android:text="C - Broadcast Receiver"
        android:textSize="16dp" />

     <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_q6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/q8"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/q8_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="A - MainActivity.java"
        android:background="@drawable/bg_questions"
        android:gravity="center"
        android:textSize="16dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/q8_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="B - Android Manifest.xml"
        android:background="@drawable/bg_questions"
        android:gravity="center"
        android:textSize="16dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/q2_4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="C - activity_main.xml"
        android:background="@drawable/bg_questions"
        android:gravity="center"
        android:textSize="16dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/q2_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="D - build.gradle"
        android:background="@drawable/bg_questions"
        android:gravity="center"
        android:textSize="16dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_start_btn"
        android:onClick="nextScreen4"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        android:text="next"
        android:drawableRight="@drawable/ic_next"
        android:textColor="@android:color/white"
        android:textSize="18dp" />
</LinearLayout>
</ScrollView>